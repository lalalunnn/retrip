= render "articles/header"

%div#mainHeader
  %div.content
    %ul.breadList
      %li
        = link_to "トップページ", root_path, { title: "トップページ" }
      %li
        = link_to "RETRIPにアカウント登録", root_path, { title: "RETRIPにアカウント登録" }

%div#mainWrap
  %div.contentTopTitle
    %h1 RETRIPにアカウント登録
    %div.articleMainFull
      %div#main
        %div.contentWrap
          %div.content.signUp
            %aside
              = link_to "既に会員の方はこちら >", new_user_session_path
            %section#form.loginWrap.blockLeft
              %h2 メールアドレスで登録
              = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                = devise_error_messages!

                %ul.mailLogin
                  %li
                    = f.text_field :nickname, class: "inputArea", placeholder: 'ユーザーID(半角英数字・3文字以上)※変更不可', autofocus: true, maxlength: "6"
                  %li
                    = f.email_field :email, class: "inputArea", placeholder: "メールアドレス"
                  %li
                    = f.password_field :password, class: "inputArea", placeholder: "パスワード（半角英数字・8文字以上）"
                = f.submit "アカウント登録", class: "btn"

            %section#form.loginWrap.blockRight
              %h2 SNSアカウントで登録
              %ul.snsLogin
                %li
                  = link_to root_path, { class: "facebook" } do
                    %span.icon-facebook Facebookアカウントで登録
                %li
                  = link_to root_path, { class: "twitter" } do
                    %span.icon-twitter Twitterアカウントで登録
              %p Facebook・Twitterに許可なく投稿されることはありません

            %p.agreement 登録すると、利用規約およびプライバシーポリシーに同意したことになります。

= render "articles/footer_induction"

= render "articles/footer"
